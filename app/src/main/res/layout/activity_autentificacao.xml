<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaria"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".activity.activity.AutentificacaoActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_marginBottom="20dp"
        app:srcCompat="@drawable/logo" />

    <EditText
        android:id="@+id/editTextEmailLogin"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:ems="10"
        android:hint="E-mail"
        android:inputType="textEmailAddress"
        android:textColor="@color/quad"
        android:background="@drawable/bg_edit_text"
        android:padding="12dp"
        android:textSize="14sp"
        android:layout_marginTop="8dp"/>

    <EditText
        android:id="@+id/editTextSenhaLogin"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:ems="10"
        android:hint="Senha"
        android:inputType="textPassword"
        android:textColor="@color/quad"
        android:background="@drawable/bg_edit_text"
        android:padding="12dp"
        android:textSize="14sp"
        android:layout_marginTop="8dp"/>

    <Button
        android:id="@+id/buttonAcesso"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/secundaria"
        android:padding="14dp"
        android:text="Acessar"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:theme="@style/botaoPadrao"
        app:cornerRadius="10dp" />

    <Button
        android:id="@+id/buttonCadastrar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:backgroundTint="@color/quad"
        android:padding="14dp"
        android:text="Cadastre-se"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:theme="@style/botaoPadrao"
        app:cornerRadius="8dp"
        android:layout_marginTop="8dp"/>
</androidx.appcompat.widget.LinearLayoutCompat>