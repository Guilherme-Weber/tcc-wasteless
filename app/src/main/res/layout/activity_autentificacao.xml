<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaria"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="30dp"
    tools:context=".activity.activity.AutentificacaoActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_marginBottom="20dp"
        app:srcCompat="@drawable/logo" />

    <EditText
        android:id="@+id/editTextEmailLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:text="Informe seu e-mail"
        android:textColor="@color/terciaria" />

    <EditText
        android:id="@+id/editTextSenhaLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword"
        android:textColor="@color/terciaria"
        tools:text="Informe Sua senha" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Você é..."
        android:textAlignment="textStart"
        android:textSize="16sp" />

    <RadioButton
        android:id="@+id/radioButtonClienteCadastro4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cliente"
        android:textColor="@color/material_dynamic_neutral40" />

    <RadioButton
        android:id="@+id/radioButtonEmpresaCadastro4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Empresa"
        android:textColor="@color/material_dynamic_neutral40" />

    <Button
        android:id="@+id/buttonCadastro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/secundaria"
        android:padding="16dp"
        android:text="Acessar"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:theme="@style/botaoPadrao"
        app:cornerRadius="10dp" />

    <Button
        android:id="@+id/buttonCadastrar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/material_dynamic_neutral70"
        android:padding="16dp"
        android:text="Cadastre-se aqui!"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:theme="@style/botaoPadrao"
        app:cornerRadius="10dp" />

</LinearLayout>