<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="731dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageProdutoLista"
                android:layout_width="match_parent"
                android:layout_height="198dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/bg_edit_text"
                android:ems="10"
                android:padding="16dp"
                android:src="@drawable/perfil" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="177dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                    android:id="@+id/textNomeRefeicao"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/bg_edit_text"
                    android:ems="10"
                    android:padding="14dp"
                    android:text="Sushi de salmão"
                    android:textColor="@color/grey"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textDescricaoRefeicao"
                    android:layout_width="match_parent"
                    android:layout_height="115dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/bg_edit_text"
                    android:ems="10"
                    android:padding="14dp"
                    android:text="Salmão com nosso delicioso arroz temperado"
                    android:textColor="@color/quad"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/bg_edit_text"
                    android:ems="10"
                    android:orientation="horizontal"
                    android:padding="14dp">

                    <TextView
                        android:id="@+id/textViewTipoValor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TextView" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" - " />

                    <TextView
                        android:id="@+id/textViewTipoPeso"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <com.blackcat.currencyedittext.CurrencyEditText
                    android:id="@+id/textPrecoRefeicao"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_edit_text"
                    android:ems="10"
                    android:layout_marginTop="8dp"
                    android:focusable="false"
                    android:inputType="none"
                    android:padding="14dp"
                    android:textColor="@color/secundaria"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</ScrollView>