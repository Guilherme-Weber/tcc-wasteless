<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".activity.activity.PagamentoActivity">

    <!-- Informações do Cartão de Crédito -->

    <EditText
        android:id="@+id/textNumeroCartao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Número do Cartão de Crédito"
        android:inputType="number"
        android:maxLength="16" />

    <EditText
        android:id="@+id/textDataExpiracao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Data de Expiração (MM/YY)"
        android:inputType="number"
        android:maxLength="5" />

    <EditText
        android:id="@+id/textCVV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="CVV"
        android:inputType="number"
        android:maxLength="3" />

    <!-- Botão de Pagar com Cartão de Crédito -->
    <Button
        android:id="@+id/buttonCredito"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pagar com Cartão de Crédito" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:background="#ccc" />

    <!-- Seção de Pagamento com Débito -->
    <Button
        android:id="@+id/buttonDebito"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pagar com Débito" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:background="#ccc" />

    <!-- Pagamento com Pix -->
    <Button
        android:id="@+id/buttonPix"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pagar com Pix" />
</LinearLayout>